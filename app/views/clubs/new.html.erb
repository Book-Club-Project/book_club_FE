<div class="container text-center">
  <h1>Create Club</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= form_with url: "/clubs",  method: :post, local: true do |f| %>
          <%= f.label :club_name %>
          <%= f.text_field :club_name, required: true %>

          <%= f.hidden_field :book_id, value: @book_id %>

          <% @users.each do |user| %>
          
            <% if user.id != current_user %>
            <p><%= f.check_box "#{user.username}" %>
               <%= f.label "#{user.username}" %></p>
            <% end  %>
          <% end  %>

          <%= f.submit "Create" %>
          <% end %>
        </div>
    </div>
</div>
