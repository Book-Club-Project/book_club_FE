<header>
  <style>
    .container {
      margin: auto;
      width: 50%;
      border: 3px solid green;
      padding: 10px;
      position: relative;
      text-align: center;
      justify-content: center;
    }

  </style>

  <div class="logo">
    <!-- Logo/App Name -->
    <%= render partial: '/layouts/partials/app_logo_banner' %>
    <!-- Logo/App Name -->

    <!-- Navbar -->
    <%= render partial: '/layouts/partials/nav_bar', locals: {links: {uri: '/', link_text: 'Home'}} %>
    <!-- Navbar -->
  </div><br>

</header>

<body>
  <%# render partial: '/layouts/partials/random_quote' %> <br><br>

  <div class="container">
    <div class="form-container">
      <%= form_with url: '/sessions/create', method: :post, local: true do |f|  %>

      <%= f.email_field :email, required: true, placeholder: 'email@domain.com' %><br><br>

      <%= f.password_field :password, required: true, placeholder: 'password' %><br><br>

      <%= f.submit 'Login' %><br><br>
      <% end %>
    </div>

    <p text-align="center">--- OR ---</p><br>

    <%= button_to 'Login with Google', '/auth/google_oauth2/', method: :get, params: {client_id: "#{ENV['GOOGLE_CLIENT_ID']}" }  %>
  </div>
</body>
