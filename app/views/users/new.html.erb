<head>
  <meta name="google-signin-client_id" content="YOUR_CLIENT_ID.apps.googleusercontent.com">
</head>

<header>
  <style>
    .banner {
      width: 100%;
      opacity: 0.5;
    }

    .container {
      position: relative;
      text-align: center;
    }

    /* Centered text */
    .centered {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
    }

    .app-name {
      font-size: 100px;
      color: blue;
    }

  </style>

  <div class="container">
    <!-- Logo/App Name -->
    <%= render partial: '/layouts/partials/app_logo_banner' %>
    <!-- Logo/App Name -->

    <!-- Navbar -->
    <%= render partial: '/layouts/partials/nav_bar', locals: {links: {uri: '/', link_text: 'Home'}} %>
    <!-- Navbar -->
  </div>


</header>

<body>
  <div class="container">
    <div class="form-container">
      <%= form_with url: '/users/create', method: :post, local: true do |f|  %>

      <%= f.text_field :name, required: :true, placeholder: 'Name' %><br><br>

      <%= f.email_field :email, required: true, placeholder: 'email@domain.com' %><br><br>

      <%= f.password_field :password, required: true, placeholder: 'password' %><br><br>

      <%= f.password_field :password_confirmation, required: true, placeholder: 'confirm password' %><br><br>

      <%= f.submit 'Submit' %><br><br>
      <% end %>
    </div>

    <p text-align="center">--- OR ---</p><br><br>

    <%= button_to 'Sign in with Google', '/auth/google_oauth2/', method: :get, params: {client_id: "#{ENV['GOOGLE_CLIENT_ID']}" }  %>
  </div>
</body>
